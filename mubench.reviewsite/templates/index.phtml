use MuBench\ReviewSite\Models\Detector;
use MuBench\ReviewSite\Models\Experiment;

?>
<html>
    <head>
        <title>MUBench Review Site</title>
        <link rel="stylesheet" type="text/css" href="<?= $site_base_url; ?>style/style.css" />
    </head>
    <body>
        <?php include "includes/menu.phtml" ?>

        <h1>Experiments</h1>

        <ul id="experiments">
        <?php foreach($experiments as $experiment) : ?>
            <li><span>Experiment <?= $experiment->id ?>: <?= htmlspecialchars($experiment->name) ?></span>
                <ul>
                <?php if ($detectors[$experiment->id]): ?>
                    <?php foreach ($detectors[$experiment->id] as $detector): ?>
                        <li><a href="<?= $url_prefix . '/ex' . $experiment->id . "/" . $detector->name ?>"><?= $detector->name ?></a></li>
                    <?php endforeach ?>
                <?php else: ?>
                    <li>No Results</li>
                <?php endif ?>
                </ul>
            </li>
        <?php endforeach; ?>
        </ul>
    </body>
</html>
